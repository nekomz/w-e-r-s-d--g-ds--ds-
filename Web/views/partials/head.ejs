		$("#scroll-top-button-container").css("padding-bottom", "25px");
	}
	if($(this).scrollTop()>200 && $(this).scrollTop()<$(document).height()-1200) {
		$("#scroll-top-button-container").fadeIn(86);
	} else {
		$("#scroll-top-button-container").fadeOut(86);
	}
});

